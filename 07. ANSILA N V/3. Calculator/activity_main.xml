<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter value"
        android:textSize="24sp"
        android:inputType="numberDecimal"
        android:layout_marginBottom="20dp" />

    <!-- Row 1 -->
    <Button android:id="@+id/button1" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_below="@id/edt1" android:text="1" />
    <Button android:id="@+id/button2" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button1" android:layout_below="@id/edt1"
        android:layout_marginStart="10dp" android:text="2" />
    <Button android:id="@+id/button3" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button2" android:layout_below="@id/edt1"
        android:layout_marginStart="10dp" android:text="3" />
    <Button android:id="@+id/buttonadd" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button3" android:layout_below="@id/edt1"
        android:layout_marginStart="10dp" android:text="+" />

    <!-- Row 2 -->
    <Button android:id="@+id/button4" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_below="@id/button1" android:text="4" />
    <Button android:id="@+id/button5" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button4" android:layout_below="@id/button2"
        android:layout_marginStart="10dp" android:text="5" />
    <Button android:id="@+id/button6" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button5" android:layout_below="@id/button3"
        android:layout_marginStart="10dp" android:text="6" />
    <Button android:id="@+id/buttonsub" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button6" android:layout_below="@id/buttonadd"
        android:layout_marginStart="10dp" android:text="-" />

    <!-- Row 3 -->
    <Button android:id="@+id/button7" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_below="@id/button4" android:text="7" />
    <Button android:id="@+id/button8" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button7" android:layout_below="@id/button5"
        android:layout_marginStart="10dp" android:text="8" />
    <Button android:id="@+id/button9" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button8" android:layout_below="@id/button6"
        android:layout_marginStart="10dp" android:text="9" />
    <Button android:id="@+id/buttonmul" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button9" android:layout_below="@id/buttonsub"
        android:layout_marginStart="10dp" android:text="ร" />

    <!-- Row 4 -->
    <Button android:id="@+id/buttondot" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_below="@id/button7" android:text="." />
    <Button android:id="@+id/button0" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/buttondot" android:layout_below="@id/button8"
        android:layout_marginStart="10dp" android:text="0" />
    <Button android:id="@+id/buttonC" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/button0" android:layout_below="@id/button9"
        android:layout_marginStart="10dp" android:text="C" />
    <Button android:id="@+id/buttondiv" android:layout_width="60dp" android:layout_height="60dp"
        android:layout_toRightOf="@id/buttonC" android:layout_below="@id/buttonmul"
        android:layout_marginStart="10dp" android:text="รท" />

    <!-- Equal Button -->
    <Button android:id="@+id/buttoneql" android:layout_width="match_parent" android:layout_height="60dp"
        android:layout_below="@id/button0" android:layout_marginTop="20dp" android:text="=" />
</RelativeLayout>
